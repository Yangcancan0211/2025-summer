<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.mapper.ShoppingCartMapper">

    <insert id="add">
        insert into shoppingcart(username,brand,speed,price) values
        <foreach item="item" collection="carVos" separator=",">
            (#{username},#{item.brand},#{item.speed},#{item.price})
        </foreach>
    </insert>


    <delete id="back">
        delete from shoppingcart where brand in
        <foreach item="item" collection="brands" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <select id="page" resultType="com.itheima.vo.CarVo">
        select * from shoppingcart
        <where>
           username = #{username}
            <if test="brand != null">
                and brand like concat('%',#{brand},'%')
            </if>
        </where>
    </select>

</mapper>